#!/usr/bin/env ruby
 
# Skinny daemon command line interface script.
# Run <tt>dropfolders -h</tt> to get more usage.
require File.dirname(__FILE__) + '/../lib/drop_folders'
require 'thin'
 
rackup_file = "#{File.dirname(__FILE__)}/../lib/drop_folders/config.ru"
 
argv = ARGV
p argv
argv << ["-R", rackup_file] unless ARGV.include?("-R")
argv << ["-p", "2010"] unless ARGV.include?("-p")
argv << ["-e", "production"] unless ARGV.include?("-e")
Thin::Runner.new(argv.flatten).run!